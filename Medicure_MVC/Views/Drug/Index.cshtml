@model IEnumerable<Medicure_MVC.Models.Drug>

@{
    ViewData["Title"] = "Index";
}

<h1>Drugs</h1>

<p>
    <a class="btn btn-outline-success h1" asp-area="" asp-controller="Drug" asp-action="Create">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier_Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salesmen_Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier_Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salesmen_Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a class="btn bg-primary" asp-area="" asp-controller="Drug" asp-action="Edit" asp-route-id="@item.Id">Edit</a>|
                <a class="btn bg-primary" asp-area="" asp-controller="Drug" asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a class="btn bg-primary" asp-area="" asp-controller="Drug" asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
