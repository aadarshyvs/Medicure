@model Medicure_MVC.Models.Drug
@{
    int randomid;
    Random r=new Random();
    randomid = r.Next();
}
@{
    ViewData["Title"] = "Create";
}
<div class="card bg-primary">
    <div class="card-header">

<h1>Add New</h1>
<h4>Drug </h4>
</div>
<div class="card-body">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control " value=@randomid readonly=true />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier_Qty" class="control-label"></label>
                <input asp-for="Supplier_Qty" class="form-control" />
                <span asp-validation-for="Supplier_Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salesmen_Qty" class="control-label"></label>
                <input asp-for="Salesmen_Qty" class="form-control" />
                <span asp-validation-for="Salesmen_Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="card-footer">
<div>
<a class="btn h1" asp-area="" asp-controller="Drug" asp-action="Index">Back To List</a>
</div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
